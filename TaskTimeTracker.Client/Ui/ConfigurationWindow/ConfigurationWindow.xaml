<Window x:Class="TaskTimeTracker.Client.Ui.ConfigurationWindow.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTimeTracker.Client.Ui.ConfigurationWindow"
        mc:Ignorable="d"
        Title="ConfigurationWindow" Height="300" Width="300" Loaded="ConfigurationWindow_OnLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">ShortCut</Label>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Grid.Column="1" Grid.Row="0">
            <TextBox Margin="0,1,0,0" Text="{Binding KeyOneString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="KeyOneBox" KeyDown="OnShortCutInput"/>
            <TextBox Margin="0,1,0,0" Text="{Binding KeyTwoString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="KeyTwoBox" KeyDown="OnShortCutInput"/>
            <TextBox Margin="0,1,0,0" Text="{Binding KeyThreeString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="KeyThreeBox" KeyDown="OnShortCutInput"/> 
        </StackPanel>
    </Grid>
</Window>
